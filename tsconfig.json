// tsconfig.json
{
  "compilerOptions": {
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "target": "esnext",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "lib": ["es2016"],
  "include": [
    "src/**/*.ts",
    "src/types.d.ts",
    "./api/*.ts"
  ],
  "exclude": ["test"],
  "files":["src/types.d.ts"]
}
